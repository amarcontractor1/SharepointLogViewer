<Window x:Class="LogViewer.SimpleTextbox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow" Width="260" Height="110" >
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition  Width="*"/>
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
                <TextBox Name="txtInput" Grid.Row="0" Margin="5" Grid.ColumnSpan="2"/>
        <Button Name="btnOK" Grid.Row="1" Grid.Column="0" Content="OK" Style="{StaticResource OKButton}" Click="btnOK_Click" HorizontalAlignment="Right" IsDefault="True" />
        <Button Name="btnCancel" Grid.Row="1" Grid.Column="1" Content="Cancel" Style="{StaticResource OKButton}" Click="btnCancel_Click" HorizontalAlignment="Right" Margin="10 0 0 0" />
    </Grid>
</Window>
